#!/bin/bash
#
#SBATCH --array=1-3%1
#SBATCH --output=./jobfiles/group_runner%A-%a.out
#SBATCH --job-name=group_Am4
#SBATCH --time=70:00:00
#SBATCH -p serc
#SBATCH --verbose

echo "moving propper SST file into place"
rm -rf /scratch/users/mborrus/AM4/AM4_run_editable/INPUT/hadisst_sst.data.nc
cp /scratch/users/mborrus/AM4/extra_data/m8_SST.nc /scratch/users/mborrus/AM4/AM4_run_editable/INPUT/hadisst_sst.data.nc

echo "starting first run"
srun --partition=serc --constraint=CLASS:SH3_CBASE python am4_runner.py input_data_path=`cd ..;pwd`/AM4_run_editable work_dir=`cd ..;pwd`/SST_m8/${SLURM_ARRAY_TASK_ID} nml_template=input_xanadu_2021.01.nml n_cpu_atmos=96 runtime_months=3 runtime_days=10 modules=${AM4_MODULE} hpc_config=sherlock3_base_singularity mpi_exec=srun am4_container_pathname=${AM4_CONTAINER_PATHNAME} am4_exe=${AM4_GFDL_EXE} slurm_partition=serc slurm_time=23:00:00 do_batch=True restart=False
sleep 15m
echo "first run submitted"

echo "moving propper SST file into place"
rm -rf /scratch/users/mborrus/AM4/AM4_run_editable/INPUT/hadisst_sst.data.nc
cp /scratch/users/mborrus/AM4/extra_data/m12_SST.nc /scratch/users/mborrus/AM4/AM4_run_editable/INPUT/hadisst_sst.data.nc

echo "starting second run"
srun --partition=serc --constraint=CLASS:SH3_CBASE python am4_runner.py input_data_path=`cd ..;pwd`/AM4_run_editable work_dir=`cd ..;pwd`/SST_m12/${SLURM_ARRAY_TASK_ID} nml_template=input_xanadu_2021.01.nml n_cpu_atmos=96 runtime_months=3 runtime_days=10 modules=${AM4_MODULE} hpc_config=sherlock3_base_singularity mpi_exec=srun am4_container_pathname=${AM4_CONTAINER_PATHNAME} am4_exe=${AM4_GFDL_EXE} slurm_partition=serc slurm_time=23:00:00 do_batch=True restart=False
sleep 15m
echo "second run submitted"

echo "moving propper SST file into place"
rm -rf /scratch/users/mborrus/AM4/AM4_run_editable/INPUT/hadisst_sst.data.nc
cp /scratch/users/mborrus/AM4/extra_data/m16_SST.nc /scratch/users/mborrus/AM4/AM4_run_editable/INPUT/hadisst_sst.data.nc

echo "starting second run"
srun --partition=serc --constraint=CLASS:SH3_CBASE python am4_runner.py input_data_path=`cd ..;pwd`/AM4_run_editable work_dir=`cd ..;pwd`/SST_m16/${SLURM_ARRAY_TASK_ID} nml_template=input_xanadu_2021.01.nml n_cpu_atmos=96 runtime_months=3 runtime_days=10 modules=${AM4_MODULE} hpc_config=sherlock3_base_singularity mpi_exec=srun am4_container_pathname=${AM4_CONTAINER_PATHNAME} am4_exe=${AM4_GFDL_EXE} slurm_partition=serc slurm_time=23:00:00 do_batch=True restart=False
sleep 15m
echo "second run submitted"

echo "  entering hibernation"
sleep 12h
echo "awoke from hibernation"
